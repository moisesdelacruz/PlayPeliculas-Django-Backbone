/* Personalizando Scroll Webkit */
::-webkit-scrollbar{
	width: 12px;
	background: none;
}
::-webkit-scrollbar-button{
	width:15px;
  	height: 5px;
}
::-webkit-scrollbar-track{
  	background:#2F3235;
  	
  	border:thin solid #1a1f25;
  	-webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
  	-webkit-border-radius: 10px;
  	border-radius: 10px;
}
::-webkit-scrollbar-thumb{
  	background: -webkit-linear-gradient(top, #6D6F72, gris);
  	-webkit-box-shadow: inset 0 1px 0 rgba(255,255,225,.5),
                		inset 1px 0 0 rgba(255,255,255,.4),
                		inset 0 1px 2px rgba(255,255,255,.3);
	border:thin solid #232c34;
  	border-radius: 10px;
  	-webkit-border-radius: 10px;
}
::-webkit-scrollbar-thumb:hover{
	background: -webkit-linear-gradient(top, azulClaro, #6D6F72);
}
/* Pseudo-clase */
::-webkit-scrollbar-thumb:window-inactive {
	background: rgba(77,161,112,.6);
}						 												 	

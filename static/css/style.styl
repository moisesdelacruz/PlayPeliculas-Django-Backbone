	font-family "open sans", "Arial"
	font-size 16px
	padding-top 90px
	-webkit-box-sizing border-box
	-moz-box-sizing border-box
	-ms-box-sizing border-box
	-o-box-sizing border-box
	

.u-bodyOpacity
	display none
	position fixed
	top 0
	bottom 0
	left 0
	right 0
	background rgba(negro, .45)	
	z-index 2
/* Header*/

.Header
	background-color gris
	border #777 .3px solid 
	box-shadow black -2px .1px 25px
	opacity .97
	position fixed
	top 0
	left 0
	right 0
	width 100%
	z-index 2
	 
	.Header-Contenedor
		max-width 1600px
		margin auto
		overflow hidden
		
		.botonBuscar
			color #ddd
			display none
			float right 
			font-size 20px
			margin-top 1px
			padding .7em .2em
			text-decoration none
			&:hover
				color azulClaro
			&:after
				content ''
				margin-left  10px
				opacity .2
				border-left 3px #ccc solid
					
		/* Accordeon Barra Buscar */
			
		.accordion-content
			//background-color negro
			//background-image linear-gradient(to bottom,rgba(negro,.9) 0,rgba(#999,.1) 100%)
			background-image url('../img/fondo3.png')
			clear both
			left 0
			padding .3em 0
			position absolute
			right 0
			top 54px
			
			.Busqueda
				clear both
				display block
				margin 0 auto
				position relative			
				width 70%
				max-width 1300px
				border-radius 3px
				
				.Busqueda-barra
					display inline-block
					position relative
					width 60%
					

					.Busqueda-formInputText

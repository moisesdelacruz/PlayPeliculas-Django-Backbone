			.datos
				width 73%
				vertical-align top
				display inline-block
				text-align left
						
				.datos-pelicula	
					border-radius .5em
					color blanco
					width calc(100% - .8em)
					font-size 12px
					margin .3em
					margin-top 0 
					margin-bottom 0
					text-align left 			
					

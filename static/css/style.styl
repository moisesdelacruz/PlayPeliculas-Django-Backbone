/* Carrusel Cartelera */

.Cartelera

	border none
	border-top 3px gris solid
	font-size 20px
	margin 0 auto 1em auto
	max-width 1400px
	min-width 1%
	padding 0
	text-align center
	width 90%
	position relative
	
	legend
		span
			background gris
			border-radius .1em
			color blanco
			display inline-block
			font-size 30px
			font-weight bolder
			margin 10px
			padding 0 .2em
			
	.form_container
		background-image url('../img/fondo2.jpg')
		//background rgb(30,30,30) 
		border 10px negroClaro solid
		padding 4px 0
		border-radius 3px
		overflow-x auto
		
	
		
		.slideContainer
			white-space nowrap
			width 1px
			
			.slide
				display inline-block
				vertical-align top 
				
				a
					background turquesa
					border-radius .1em
					display inline-block
					height 200px
					margin 0 0 0 20px
					overflow hidden
					width 150px
					
					img
						height 200px
						width 100%
						border-radius  .1em
						&:hover
							opacity .8 
							
	.direccion 
		background-image linear-gradient(#5490bd,#31668e)
		border none
		border-radius 2px
		color gris
		font-size 1em
		font-weight bolder
		outline none
		position absolute
		height 50px
		width 50px
		border-radius 50%
		top 50%
		&:hover
			background-image linear-gradient(#31668e,#5490bd)
		
	.right
		right -30px
	.left 
		left -30px

/* Contenedor Principal */

.ContenPrincipal
	border-radius .2em
	//box-shadow 0px 0px 10px 1px rgba(#999,.5)
	margin 0 auto
	margin-top 15px
	margin-bottom 1em
	max-width 1600px
	overflow hidden
	width 95%
	

	/*Descripcion Contenedor*/
	
	.Descripcion

				padding 0
				text-shadow black 1px 2px 10px
		
		/*Botonones MenuMobile*/		

		.MenuMobile
			display none
			position relative
			
			.botonMenu 
				display block
				color blanco
				font-size 30px
				padding .4em .2em 
				position relative
				text-decoration none
				top -3px
			
		/* Menu Principal*/
							
		.Menu 
			float right
			
			.Menu-lista 
				list-style none
				padding 0
				
				.Menu-item 
					display inline-block
					margin-right .4em 
							
					.Menu-link
						border-bottom none .3em solid
						color blanco
						font-weight bold
						margin 0
						padding .8em .5em 
